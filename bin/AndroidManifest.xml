<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.connexus2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.connexus2.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.connexus2.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.connexus2.UploadActivity"
            android:label="@string/title_activity_upload" >
        </activity>
        <activity
            android:name="com.example.connexus2.CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name="com.example.connexus2.ViewStreamsActivity"
            android:label="@string/title_activity_view_streams" >
        </activity>
        <activity
            android:name="com.example.connexus2.SearchStreamsActivity"
            android:label="@string/title_activity_search_streams" >
        </activity>
        <activity
            android:name="com.example.connexus2.ViewAStreamActivity"
            android:label="@string/title_activity_view_astream" >
        </activity>
        <activity
            android:name="com.example.connexus2.NearbyStreamsActivity"
            android:label="@string/title_activity_nearby_streams" >
        </activity>
        <activity
            android:name="com.example.connexus2.GetStreamsActivity"
            android:label="@string/title_activity_get_streams" >
        </activity>
    </application>

</manifest>
