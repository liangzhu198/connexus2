<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/hello_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/hello_title"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="36sp" />
    <TextView
        android:id="@+id/login_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@id/hello_title"
        android:text="@string/login_description"
        android:textStyle="bold"
        android:textSize="30sp" />
    <EditText
        android:id="@+id/gmail_id"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/gmail_id"
        android:layout_below="@id/login_description"
        android:layout_marginTop="30dp"
        android:textSize="24sp" />
    
    <EditText
        android:id="@+id/gmail_pwd"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="@string/gmail_pwd"
        android:layout_below="@id/gmail_id"
        android:layout_marginTop="25dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/gmail_pwd"
        android:text="@string/login_button"
        android:onClick="LoginMessage"
        android:layout_marginTop="25dp"
        android:textSize="24sp" />

    <Button
        android:id="@+id/view_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_button"
        android:text="@string/view_button"
        android:onClick="ViewStreams"
        android:layout_marginTop="30dp"
        android:textSize="24sp" />
            

    
</RelativeLayout>
